{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Target Language",
  "scopeName": "source.targetlang",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#types" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.targetlang",
          "match": "//.*$"
        },
        {
          "name": "comment.block.targetlang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.targetlang",
          "match": "\\b(if|else|while|for|return|break|continue|switch|case|default)\\b"
        },
        {
          "name": "keyword.other.targetlang",
          "match": "\\b(import|export|from|as)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.targetlang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.targetlang",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.targetlang",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.targetlang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.targetlang",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.targetlang",
          "match": "\\+|\\-|\\*|\\/|\\%"
        },
        {
          "name": "keyword.operator.comparison.targetlang",
          "match": "==|!=|<|>|<=|>="
        },
        {
          "name": "keyword.operator.logical.targetlang",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.targetlang",
          "match": "="
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.targetlang",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.targetlang",
          "match": "\\b(int|float|string|bool|void|var|let|const)\\b"
        },
        {
          "name": "entity.name.type.targetlang",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "injections": {
    "L:meta.embedded.block.targetlang": {
      "patterns": [
        {
          "include": "#comments"
        },
        {
          "include": "#keywords"
        },
        {
          "include": "#strings"
        }
      ]
    }
  },
  "injectionSelector": "L:text.html.markdown"
}
