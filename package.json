{
  "name": "project-extension-grammar",
  "displayName": "Project Extension Grammar",
  "description": "Comprehensive architecture for creating programming language extensions on Kiro IDE with AI Agent integration",
  "version": "0.1.0",
  "publisher": "kiro",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiro/project-extension-grammar"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:targetlang"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "targetlang",
        "extensions": [".targetlang", ".tlang"],
        "aliases": ["Target Language", "targetlang"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "targetlang",
        "scopeName": "source.targetlang",
        "path": "./syntaxes/targetlang.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "kiro.initializeSupport",
        "title": "Initialize Kiro Support",
        "category": "Kiro"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": ".kiro/steering/*.md",
        "url": "./schemas/steering-schema.json"
      },
      {
        "fileMatch": ".kiro/hooks/*.json",
        "url": "./schemas/hook-schema.json"
      }
    ],
    "configuration": {
      "title": "Project Extension Grammar",
      "properties": {
        "projectExtensionGrammar.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Language Server Protocol integration for semantic analysis"
        },
        "projectExtensionGrammar.lsp.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the language server executable. Leave empty to use the bundled server."
        },
        "projectExtensionGrammar.steering.autoLoad": {
          "type": "boolean",
          "default": true,
          "description": "Automatically load steering files when opening relevant files"
        },
        "projectExtensionGrammar.hooks.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable agent hooks for automated workflows"
        },
        "projectExtensionGrammar.mcp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Model Context Protocol server integration"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "jest",
    "test:watch": "jest --watch",
    "package": "vsce package",
    "package:verify": "node scripts/verify-package.js",
    "package:list": "vsce ls --tree"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "fast-check": "^3.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.19.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "gray-matter": "^4.0.3",
    "minimatch": "^9.0.0",
    "vscode-languageclient": "^8.0.0"
  }
}
