{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hook Configuration",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Human-readable name for the hook"
    },
    "trigger": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["onSave", "onFileCreate", "onPreCommit", "manual"],
          "description": "Event that triggers the hook"
        },
        "filePattern": {
          "type": "string",
          "description": "Glob pattern for files that trigger this hook"
        }
      },
      "required": ["type"]
    },
    "action": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["prompt", "command"],
          "description": "Type of action to execute"
        },
        "prompt": {
          "type": "string",
          "description": "Prompt to send to AI agent (required when type is prompt)"
        },
        "command": {
          "type": "string",
          "description": "Command to execute (required when type is command)"
        }
      },
      "required": ["type"]
    },
    "enabled": {
      "type": "boolean",
      "description": "Whether this hook is enabled"
    },
    "preventRecursion": {
      "type": "boolean",
      "description": "Whether to prevent recursive triggers"
    }
  },
  "required": ["name", "trigger", "action"]
}
